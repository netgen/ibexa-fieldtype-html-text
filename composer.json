{
    "name": "netgen/ibexa-fieldtype-html-text",
    "description": "Netgen's html text field type for Ibexa",
    "type": "ibexa-bundle",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://netgen.io"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ibexa/admin-ui": "*",
        "ibexa/content-forms": "*",
        "ibexa/core": "^4.2",
        "ezyang/htmlpurifier": "^4.16",
        "xemlock/htmlpurifier-html5": "^0.1.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^6.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "GPL-2.0-only",
    "autoload": {
        "psr-4": {
            "Netgen\\IbexaFieldTypeHtmlText\\": "lib/",
            "Netgen\\IbexaFieldTypeHtmlTextBundle\\": "bundle/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netgen\\IbexaFieldTypeHtmlText\\Tests\\Integration\\": "tests/integration",
            "Netgen\\IbexaFieldTypeHtmlText\\Tests\\Unit\\": "tests/lib"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --colors=always"
    }
}
